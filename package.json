{
  "name": "ezark",
  "version": "2.4.4",
  "description": "Manage yours ARKs",
  "main": "index.js",
  "bin": {
    "ezark": "./ezark"
  },
  "scripts": {
    "start": "./ezark",
    "preversion": "npm run build && git add public/dist/bundle.js",
    "postversion": "git push && git push --tags",
    "dev": "npm-run-all --parallel start build",
    "build": "cross-env NODE_ENV=production browserify -g envify public/src/main.js | uglifyjs -c warnings=false -m > public/dist/build.js",
    "builddebug": "cross-env NODE_ENV=developement browserify -g envify public/src/main.js > public/dist/build.js"
  },
  "keywords": [],
  "contributors": [
    {
      "name": "Nicolas Thouvenin",
      "url": "https://github.com/touv"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "async": "^2.0.1",
    "castor-core": "^8.2.0",
    "debug": "^2.2.0",
    "inist-ark": "^2.0.0",
    "mongodb-querystring": "^1.0.3",
    "serial-loop": "^3.0.0",
    "vue": "^1.0.26",
    "vue-resource": "^0.7.4",
    "vue-validator": "^2.1.7"
  },
  "devDependencies": {
    "browserify": "^13.1.0",
    "babelify": "^7.2.0",
    "babel-core": "^6.0.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.0.0",
    "babel-runtime": "^6.18.0",
    "chai": "^3.5.0",
    "eslint": "^3.5.0",
    "istanbul": "^0.4.2",
    "jshint": "^2.9.1",
    "mocha": "^2.4.5",
    "nodemon": "^1.9.1",
    "cross-env": "^1.0.6",
    "envify": "^3.4.1",
    "npm-run-all": "^2.1.2",
    "uglify-js": "^2.5.0",
    "vue-hot-reload-api": "^2.0.6",
    "vueify": "^8.7.0",
    "watchify": "^3.4.0"
  },
  "browserify": {
    "transform": [
      "vueify",
      "babelify"
    ]
  }
}
